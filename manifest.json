{
  "manifest_version": 2,
  "name": "Get Recurly Data into HelpScout",
  "description": "Grab and display recurly/bug-report data in HelpScout",
  "version": "1.2.0",
  "permissions": [
    "https://dashboard.ecquire.com/godmode/*", "https://secure.helpscout.net/api", "https://gateway.watsonplatform.net/*", "tabs", "webNavigation", "storage", "bookmarks", "identity"
  ],
  "browser_action": {
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "474028278053-bbmgp313i0dgfoafmvbk3q8sfjrhfrta.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  },
  "content_scripts": [{
    "matches": ["https://ecquire.recurly.com/*", "https://secure.helpscout.net/conversation/*", "https://gateway.watsonplatform.net/*", "https://dashboard.ecquire.com/godmode/*"],
    "js": ["js/content.js", "/private/configvars.js"]
  }],
  "background": {
    "scripts": ["js/background.js"],
    "persistent" :false
  }

}